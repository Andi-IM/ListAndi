<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="List Widget"
        android:textColor="@color/purple_500"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="List Operating System"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnListWithIcon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnList"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="List Operating System with Icon"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btnListMobilBekas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnListWithIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="List Mobil Bekas"
        android:textSize="25sp" />

</RelativeLayout>